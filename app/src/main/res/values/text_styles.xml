<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="std_Gray" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/secondaryGray</item>
    </style>

    <style name="sb_num_text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bigger</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sb_header_text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sb_detail_text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/base</item>
        <item name="android:textColor">@color/secondaryGray</item>
    </style>

    <!-- Card -->
    <style name="card_title" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bigger</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_description" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/base</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_members" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Members popup -->
    <style name="members_popup_name" parent="std_Gray">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="members_popup_admin" parent="std_Gray">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Prefs -->
    <style name="pref_name" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="pref_time" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bigger</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>