<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!-- Trick to add shadow to the toolbar in pre-v21 versions -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- **** Place Your Content Here **** -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/popupAddAloneSession_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/popup_add_alone_session_name" />

            <EditText
                android:id="@+id/popupAddAloneSession_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="TODONumber of Pomodoros" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow" />
    </FrameLayout>
</LinearLayout>